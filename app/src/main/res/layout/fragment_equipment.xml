<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fishg.d20chargen.EquipmentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cardTitleSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:text="Currencies"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cardDividerAbilityScores"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="6dp"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        app:srcCompat="@color/colorPrimary" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:columnCount="2"
                        android:paddingBottom="4dp"
                        android:rowOrderPreserved="true">

                        <TextView
                            android:id="@+id/titleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_vertical|fill_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:fontFamily="@font/aclonica"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="Name"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/titleValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill_vertical|fill_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/aclonica"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="Value"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <!--Acrobatics-->


                        <TextView
                            android:id="@+id/titleCopper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:padding="2dp"
                            android:text="Copper"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewStrSaveProf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <!--Animal Handling-->


                        <TextView
                            android:id="@+id/titleSilver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:padding="2dp"
                            android:text="Silver"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewDexSaveProf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <!--Arcana-->


                        <!--Athletics-->

                        <TextView
                            android:id="@+id/titleElectrum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:padding="2dp"
                            android:text="Electrum"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/valueElectrum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <!--Deception-->

                        <TextView
                            android:id="@+id/titleGold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:padding="2dp"
                            android:text="Gold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/valueGold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/titlePlatinum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:padding="2dp"
                            android:text="Platinum"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/valuePlatinum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_margin="2dp"
                            android:background="?attr/colorButtonNormal"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <!--History-->

                        <!--Insight-->

                        <!--Intimidation-->

                        <!--Investigation-->

                        <!--Medicine-->

                        <!--Nature-->

                        <!--Perception-->

                        <!--Performance-->

                        <!--Persuasion-->

                        <!--Religion-->

                        <!--SlightofHand-->

                        <!--Stealth-->

                        <!--Survival-->

                    </GridLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
